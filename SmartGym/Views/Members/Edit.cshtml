@model SmartGym.Models.Member

@{
    ViewBag.Title = "Edit";
}


    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Update Member Profile</h4>
                <hr />
